.indexContainer {
  display: flex;
  margin-top: 20rpx;
  align-items: center;
}
.indexContainer .logo {
  width: 118rpx;
  height: 40rpx;
  margin: 0 20rpx;
}
.indexContainer .search {
  position: relative;
  height: 60rpx;
  background: #ccc;
  flex-grow: 1;
  border-radius: 10rpx;
  padding-left: 60rpx;
}
.indexContainer .search .iconfont {
  position: absolute;
  top: 50%;
  left: 20rpx;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.indexContainer .search .searchInput {
  height: 100%;
}
.indexContainer .search .searchInput .placeholder {
  text-align: center;
  font-size: 24rpx;
  text-indent: -40rpx;
}
.indexContainer .username {
  width: 140rpx;
  height: 60rpx;
  border-radius: 10rpx;
  color: #f00;
  font-size: 24rpx;
  text-align: center;
  line-height: 60rpx;
  margin: 0 20rpx;
}

